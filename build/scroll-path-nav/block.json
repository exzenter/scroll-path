{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "scrollpath/nav",
  "version": "1.0.0",
  "title": "Scroll Path Nav",
  "category": "widgets",
  "icon": "list-view",
  "description": "Auto-detects headings and creates an animated SVG scroll path navigation.",
  "keywords": [
    "navigation",
    "scroll",
    "toc",
    "path",
    "table of contents",
    "headings"
  ],
  "attributes": {
    "includeH1": {
      "type": "boolean",
      "default": false
    },
    "includeH2": {
      "type": "boolean",
      "default": true
    },
    "includeH3": {
      "type": "boolean",
      "default": true
    },
    "includeH4": {
      "type": "boolean",
      "default": true
    },
    "includeH5": {
      "type": "boolean",
      "default": false
    },
    "includeH6": {
      "type": "boolean",
      "default": false
    },
    "customSelectors": {
      "type": "string",
      "default": ""
    },
    "viewportTopMargin": {
      "type": "number",
      "default": 10
    },
    "viewportBottomMargin": {
      "type": "number",
      "default": 10
    },
    "sectionBasedDetection": {
      "type": "boolean",
      "default": false
    },
    "pathColor": {
      "type": "string",
      "default": "#91cb3e"
    },
    "pathWidth": {
      "type": "number",
      "default": 3
    },
    "pathOpacity": {
      "type": "number",
      "default": 100
    },
    "pathLineStyle": {
      "type": "string",
      "default": "solid"
    },
    "childIndent": {
      "type": "number",
      "default": 20
    },
    "pathCornerRadius": {
      "type": "number",
      "default": 0
    },
    "fontSize": {
      "type": "number",
      "default": 14
    },
    "lineHeight": {
      "type": "number",
      "default": 2
    }
  },
  "supports": {
    "html": false,
    "align": [
      "left",
      "right"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "textdomain": "scrollpath",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}